<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_margin="@dimen/fab_margin"
    android:elevation="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/coin_icon_size"
            android:layout_height="@dimen/coin_icon_size"
            android:src="@mipmap/ic_launcher"
            android:layout_margin="@dimen/fab_margin"
            android:id="@+id/coin_icon"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/coin"
                android:id="@+id/name"
                android:textAppearance="?android:textAppearanceLarge"
                android:gravity="start"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:text="@string/symbol"
                android:layout_toEndOf="@id/name"
                android:layout_alignBaseline="@id/name"
                android:padding="@dimen/fab_margin"
                android:id="@+id/symbol"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/value"
                android:id="@+id/value"
                android:textAppearance="?android:textAppearanceLarge"
                android:layout_below="@id/name"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/value"
                android:id="@+id/usdvalue"
                android:layout_toEndOf="@id/value"
                android:layout_alignBaseline="@id/value"
                android:padding="@dimen/fab_margin"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/percent"
                android:id="@+id/percent"
                android:textAppearance="?android:textAppearanceLarge"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/coin_icon_size"/>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
</RelativeLayout>